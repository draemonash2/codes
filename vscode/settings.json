{
    "workbench.iconTheme": "vscode-icons",
    "editor.stickyScroll.enabled": true,
    "vsicons.dontShowNewVersionMessage": true,
    "editor.renderWhitespace": "all",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "search.showLineNumbers": true,
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.copyOnSelection": true,
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "C:\\\\codes\\\\vscode\\\\.vimrc",
    "[python]": {
        "editor.formatOnType": true
    },
    "editor.minimap.enabled": false,
    "markdown-preview-enhanced.previewTheme": "github-dark.css",
    "git.openRepositoryInParentFolders": "never",
    "[markdown]": {
        "editor.wordWrap": "off"
    },
    "markdownlint.config": {
        //"MD007": false,                                           // https://github.com/DavidAnson/markdownlint/blob/v0.27.0/doc/md007.md
        "MD007": { "indent": 4 },                                   // https://github.com/DavidAnson/markdownlint/blob/v0.27.0/doc/md007.md
        "MD013": { "line_length": 9999 },                           // https://github.com/DavidAnson/markdownlint/blob/v0.27.0/doc/md013.md
        "MD033": { "allowed_elements": ["details", "summary"] },    // https://github.com/DavidAnson/markdownlint/blob/v0.27.0/doc/md033.md
        "MD046": { "style": "fenced" }                              // https://github.com/DavidAnson/markdownlint/blob/v0.27.0/doc/md046.md
    },
    "alt-editor.binary": "C:\\prg_exe\\Vim\\gvim.exe",
    "alt-editor.args": "{filename}",
    "editor.fontFamily": "\"Source Han Code JP\", monospace",
    "remote.SSH.remotePlatform": {
        "robocipA1-x11": "linux"
    },
    "markdown-pdf.highlightStyle": "solarized-light.css",
    "markdown-pdf.stylesRelativePathFile": true,
    "markdown-pdf.styles": [
        ".\\\\_custom.css"
    ],
    "workbench.settings.openDefaultKeybindings": true,
    "markdown-pdf.scale": 0.8
}